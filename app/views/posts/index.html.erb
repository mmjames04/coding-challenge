<!-- View for showing all `Post` -->

<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Career Plug</h1>
      <%= link_to '+ New Post', new_post_path %>
    </div>
  </div>
</div>

<% @posts.each do |post| %>
  <p><%= post.title %></p>
  <p><%= post.body %></p>
  <%= link_to 'comments (x)', post_path(post) %>
<% end %>
