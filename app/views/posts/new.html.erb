<!-- View for creating a new `Post` -->
<!-- See http://guides.rubyonrails.org/form_helpers.html#dealing-with-basic-forms for more information -->
<div class="row">
  <h1 class="col-md-12 text-center">New Post</h1>
</div>
<div class="row">
  <%= form_with scope: :post, url: posts_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, class: 'col-md-4 control-label' %>
      <div class="col-md-12">
        <%= form.text_field :title, size: '100%', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :body, class: 'col-md-4 control-label' %>
      <div class="col-md-12">
        <%= form.text_area :body, size: '100%', class: 'form-control' %>
      </div>
    </div>

    <div class="text-right">
      <%= form.submit "Submit", class: 'btn btn-default btn-primary' %>
    </div>
  <% end %>
</div>
